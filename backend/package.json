{
  "name": "payouts-backend",
  "version": "0.1.0",
  "description": "Fortium Payouts - Partner and subcontractor payout control system",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "npm run db:backup-wise-recipients && prisma db push",
    "db:push:force": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:backup-wise-recipients": "tsx scripts/backup-wise-recipients.ts",
    "db:restore-wise-recipients": "tsx scripts/restore-wise-recipients.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/oauth2": "^7.8.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fortium/identity-client": "https://github.com/FortiumPartners/identity-client/tarball/main",
    "@prisma/client": "^5.10.0",
    "fastify": "^4.26.0",
    "fastify-type-provider-zod": "^1.1.9",
    "jose": "^6.1.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "postmark": "^4.0.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "dotenv": "^17.2.3",
    "prisma": "^5.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
