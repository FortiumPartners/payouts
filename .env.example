# Fortium Payouts - Environment Variables Template
# Copy this to .env and fill in your values
# DO NOT COMMIT .env - it contains secrets

# Database
DATABASE_URL=postgresql://payouts:payouts@localhost:5432/payouts

# QuickBooks API (via fpqbo service)
FPQBO_API_URL=https://qbo-oauth.onrender.com
FPQBO_API_KEY_US=your-us-api-key
FPQBO_API_KEY_CA=your-ca-api-key

# Auth (Google OAuth)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-secret
SESSION_SECRET=change-this-to-a-random-string-in-production
BASE_URL=http://localhost:8005

# Bill.com API
BILLCOM_API_URL=https://api.bill.com/api/v2
BILLCOM_USERNAME=your-billcom-email
BILLCOM_PASSWORD=your-billcom-password
BILLCOM_DEV_KEY=your-dev-key
BILLCOM_ORG_ID=your-org-id
BILLCOM_MFA_ID=your-mfa-id

# PartnerConnect Integration (M2M Client Credentials)
PARTNERCONNECT_API_URL=https://prod-v3.fortiumpartners.io/v3
PARTNERCONNECT_CLIENT_ID=your-client-id
PARTNERCONNECT_CLIENT_SECRET=your-client-secret
PARTNERCONNECT_AUTH0_DOMAIN=prod-fs-fortiumpartners.us.auth0.com
PARTNERCONNECT_AUDIENCE=https://prod-v3.fortiumpartners.io

# Wise
WISE_API_TOKEN=your-wise-api-token

# Postmark (Email)
POSTMARK_API_TOKEN=your-postmark-token
POSTMARK_FROM_EMAIL=notifications@fortiumpartners.com
POSTMARK_FROM_NAME=Fortium Partners
FORTIUM_FINANCE_EMAIL=accounting@fortiumpartners.com
